                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6.50"
                                android:textColor="#999999"
                                android:textSize="@dimen/text_size_12sp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
